print(numero, "x", 1, "=", x2 )
print(numero, "x", 1, "=", x3 )
print(numero, "x", 1, "=", x4 )
print(numero, "x", 1, "=", x5 )
print(numero, "x", 1, "=", x6 )
print(numero, "x", 1, "=", x7 )
print(numero, "x", 1, "=", x8 )
print(numero, "x", 1, "=", x9 )
