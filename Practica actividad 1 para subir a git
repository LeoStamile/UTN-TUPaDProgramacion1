print("Hola, dime dos numeros distintos de cero por favor. Escribe el primer numero ")
numero1 = int(input("")) 
print("ahora dime el segundo numero por favor ") 
numero2 = int(input(""))     
suma = numero1 + numero2
resta = numero1 - numero2
multiplicacion = numero1 * numero2
division = numero1 / numero2
print(f"en base al numero proporsionado los resultados serian: ")
print("suma", suma)
print("resta", resta)
print("multiplicacion", multiplicacion)
print("division", division)

print("Hola, dime tu altura y peso asi podre calcular tu indice de masa corporal. Primero dime tu altura por favor ")
altura = float(input("")) 
print("ahora dime cuanto pesas (en Kgs.) ") 
peso = float(input(""))     
imc = peso / (altura)**2
print(f"en base a la altura y el peso proporsionado tu indice de masa corporal (IMC) seria: ")
print(imc)


print("Hola, la temperatura que quieras en grados celsiusy te pasare su equivalencia a Fahrenheit ")
celsius = float(input("")) 
fahrenheit = (9/5)*celsius+32   
print(f"en base a los grados celsius que has ingresado, su equivalente a Fahrenheit seria: ")
print(fahrenheit)

print("Hola, te voy a pedir que ingreses 3 numeros por favor. Ingresa el primer numero ")
numero1 = float(input("")) 
print("ahora ingresa el segundo numero")
numero2 = float(input(""))
print("ahora ingresa el tercer numero")
numero3 = float(input(""))
promedio = (numero1 + numero2 + numero3)/3
print(f"en base los tres numeros que ingresaste el promedio de los mismos es: ")
print(promedio)